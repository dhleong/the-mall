{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "outDir": "dist",
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "declaration": true,
        "noUnusedLocals": true,
        "types": [
            "chai", "mocha", "node"
        ]
    },
    "include": [
        "src", "test"
    ]
}
